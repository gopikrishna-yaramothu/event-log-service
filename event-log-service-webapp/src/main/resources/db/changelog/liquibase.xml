<databaseChangeLog logicalFilePath="liquibase.xml"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="Hemanth/ShruthiP" id="201512161533">
        <createTable tableName="event_log">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="uuid" type="varchar(40)"/>
            <column name="timestamp" type="timestamp"/>
            <column name="object" type="varchar(1000)"/>
            <column name="category" type="varchar(255)"/>
            <column name="filter" type="varchar(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="201512161630" author="Shruthi, Hemanth">
        <comment>Creating quartz cron scheduler Table</comment>
        <createTable tableName="quartz_cron_scheduler">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="boolean" defaultValue="true">
            </column>
            <column name="cron_statement" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="start_delay" type="int">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="201512161647" author="Hemanth / ShruthiP">
        <comment>Adding schedulers to publish event log</comment>
        <sql>
            insert into quartz_cron_scheduler (name, cron_statement, start_delay, enabled) values ('eventLogPublisherJob', '0 0/1 * * * ?', 0, true);
        </sql>
    </changeSet>

    <changeSet id="201610171447" author="Ujjawala / ShruthiP">
        <comment>Add column to event_log table</comment>
        <sql>
           alter table event_log add column parent_uuid varchar(40);
        </sql>
    </changeSet>

    <changeSet id="201610171458" author="Ujjawala / ShruthiP">
        <comment>update parent_uuid column</comment>
        <sql>
           update event_log set parent_uuid = uuid;
        </sql>
    </changeSet>
    <changeSet id="202011051522" author="Gopi / Shriram">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists columnName="filter1" tableName="event_log"/>
                <columnExists columnName="filter2" tableName="event_log"/>
                <columnExists columnName="filter3" tableName="event_log"/>
                <columnExists columnName="filter4" tableName="event_log"/>
                <columnExists columnName="filter5" tableName="event_log"/>
                <columnExists columnName="filter6" tableName="event_log"/>
                <columnExists columnName="filter7" tableName="event_log"/>
                <columnExists columnName="filter8" tableName="event_log"/>
                <columnExists columnName="filter9" tableName="event_log"/>
                <columnExists columnName="filter10" tableName="event_log"/>
            </not>
        </preConditions>
        <comment>Adding Province, District and Facility in event_log table</comment>
        <sql>
            ALTER TABLE event_log ADD COLUMN filter1 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter2 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter3 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter4 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter5 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter6 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter7 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter8 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter9 varchar(255);
            ALTER TABLE event_log ADD COLUMN filter10 varchar(255);
        </sql>
    </changeSet>
</databaseChangeLog>
